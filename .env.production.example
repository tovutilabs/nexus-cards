# Production Environment (VPS)
NODE_ENV=production

# Database Configuration
# IMPORTANT: DB_PASSWORD must match the password in DATABASE_URL
DB_PASSWORD=CHANGE_ME_STRONG_DATABASE_PASSWORD
DATABASE_URL=postgresql://nexus_user:CHANGE_ME_STRONG_DATABASE_PASSWORD@db:5432/nexus_cards

# Redis Configuration  
# IMPORTANT: If using Redis password, it must match in both places
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME_STRONG_REDIS_PASSWORD@redis:6379

JWT_SECRET=CHANGE_ME_STRONG_SECRET_KEY
JWT_EXPIRES_IN=7d

# Encryption Key (REQUIRED - generate with: openssl rand -hex 32)
# MUST be exactly 64 hex characters (32 bytes)
ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32_EXACTLY_64_CHARS

API_PORT=3001
API_URL=https://api.nexus.cards

WEB_PORT=3000
WEB_URL=https://nexus.cards

SMTP_HOST=smtp.production.com
SMTP_PORT=587
SMTP_USER=production@nexus.cards
SMTP_PASSWORD=CHANGE_ME
EMAIL_FROM=noreply@nexus.cards

STRIPE_SECRET_KEY=sk_live_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_key

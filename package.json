{
  "name": "nexus-cards",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "docker compose up --build",
    "dev:local": "concurrently \"pnpm run dev:api\" \"pnpm run dev:web\"",
    "dev:api": "pnpm --filter @nexus-cards/api dev",
    "dev:web": "pnpm --filter @nexus-cards/web dev",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @nexus-cards/api build",
    "build:web": "pnpm --filter @nexus-cards/web build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "seed": "docker exec nexus-api sh -c 'cd /app/apps/api && pnpm seed'",
    "seed:local": "pnpm --filter @nexus-cards/api seed",
    "seed:prod": "pnpm --filter @nexus-cards/api seed:prod",
    "db:migrate": "docker exec nexus-api sh -c 'cd /app/apps/api && pnpm prisma migrate deploy'",
    "db:migrate:local": "pnpm --filter @nexus-cards/api prisma migrate deploy",
    "db:reset": "docker exec nexus-api sh -c 'cd /app/apps/api && pnpm prisma migrate reset'",
    "db:studio": "docker exec -it nexus-api sh -c 'cd /app/apps/api && pnpm prisma studio'"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "lighthouse": "^13.0.1",
    "prettier": "^3.2.5",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3"
  }
}
